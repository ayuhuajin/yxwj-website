@import "_mixins/index"
@import "_variables/index"
@import "_base/index"
@import "_pages/index"

.footer {
 position: relative;
 color: #3b4351;
}
.footer-nav, .footer-contact, .footer-copyright {
  text-align: center;
  margin: 10px 0;
}
.footer-nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.footer-nav li {
  display: inline;
  margin-right: 15px;
}
.footer-nav a {
  color: #ddd;
  text-decoration: none;
  transition: color 0.3s ease;
}
.footer-nav a:hover {
  color: #fff;
}
.footer-qrcode {
  /* display: flex;
  flex-direction: column; */
  text-align: center;
  margin-bottom: 10px;
}
.qrcode {
  width: 100px; /* 根据实际二维码图片大小调整 */
  height: auto;
  margin-bottom: 10px;
}
.footer-wrap{
  display: flex;
  align-items: center;
}
.footer-wrap div{
  flex:0 0 50%;
}
@media (max-width: 768px) {
  .footer-wrap{
     display: block !important;
  }
  .footer-contact, .footer-qrcode {
      text-align: right;
  }
  .footer-nav {
      text-align: left;
  }
  .footer-contact, .footer-qrcode, .footer-copyright {
      flex: 1 auto; /* 多行时自动调整宽度 */
  }
  .footer-contact, .footer-qrcode {
      text-align: center;
      margin-left: 20px;
  }
  .footer-nav {
      margin-right: 20px;
  }
}
.footer-copyright{
  color: #3b4351;
}